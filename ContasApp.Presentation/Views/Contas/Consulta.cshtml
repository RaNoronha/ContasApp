@{Layout = "~/Views/Shared/_AdminLayout.cshtml";}

@model ContasApp.Presentation.Models.ContasConsultaViewModel

@using ContasApp.Data.Entities

<h5>Consulta das contas</h5>
<p>Faça o consulta da contas</p>
<hr/>

@using(Html.BeginForm())
{
    <div class="row mb-2">

        <div class="col">
            <label>Data Inicial:</label>
            @Html.TextBoxFor(model => model.DataInicio, new{@type="date", @class="form-control"})
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.DataInicio)
            </span>
        </div>

        <div class="col">
            <label>Data Final:</label>
            @Html.TextBoxFor(model => model.DataFim, new{@type="date", @class="form-control"})
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.DataFim)
            </span>
        </div>

        <div class="col">
            <div>
                <label></label>
                <input type="checkbox" checked/>Contas a receber
            </div>
            
            <div>
                <input type="checkbox" checked/>Contas a pagar
            </div>
        </div>

        <div class="col">
            <input type="submit" class="btn btn-success" value="Pesquisar Contas"/>
        </div>
    </div>

    @if (ViewBag.Contas != null && ViewBag.Contas.Count > 0)
    {
        <div class="table-responsive mb-2">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Data</th>
                        <th>Valor</th>
                        <th>Tipo</th>
                        <th>Nome da Conta</th>
                        <th>Categoria</th>
                        <th>Operações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in ViewBag.Contas as List<Conta>)
                    {
                        <tr>
                            <td>@item.Data.ToString()</td>
                            <td>@item.Valor.ToString()</td>
                            <td>
                                @if(item.Tipo == 1)
                                {
                                    <span class="badge bg-success">CONTA A RECEBER</span>
                                }
                                else if(item.Tipo == 2)
                                {
                                    <span class="badge bg-danger">CONTA A PAGAR</span>
                                }
                            </td>
                            <td>@item.Nome</td>
                            <td></td>
                            <td>
                                <button class="btn btn-sm btn-primary">Editar</button>
                                <button class="btn btn-sm btn-danger">Excluir</button>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="6">
                            Quantidade Contas Obtidas: 0
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    }
}