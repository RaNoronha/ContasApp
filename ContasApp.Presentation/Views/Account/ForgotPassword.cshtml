@{Layout = "~/Views/Shared/_AccountLayout.cshtml";}

@model ContasApp.Presentation.Models.AccountForgotPasswordViewModel

<div class="text-center">
    <h4>Esqueci minha senha!!</h4>
    <p>Informe os dados abaixo para recuperar sua senha de acesso.</p>
    <hr/>
</div>

@using(Html.BeginForm())
{

    <div class="mb-2 text-center text-danger">
        <strong>@TempData["Mensagem"]</strong>
    </div>

    <div class="mb-2">
        <label> Digite o email de acesso:</label>
        @Html.TextBoxFor(model => model.Email, new{@class="form-control", placeholder="Ex:contaapp@gmail.com"})
        <span class="text-danger">
            @Html.ValidationMessageFor(model => model.Email)
        </span>
    </div>

    <div class="mb-2 d-grid">
        <input type="submit" class="btn btn-primary" value="Enviar senha" />
    </div>

    <div class="mb-2 text-center">
        Já possui conta?
        <a href="/Account/Login">Acesse aqui!</a>
    </div>
    
    <div class="mb-2 text-center">
        Não possui conta?
        <a href="/Account/Register">Cadastre-se aqui!</a>
    </div>
}